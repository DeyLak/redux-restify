{
  "compilerOptions": {
    "target": "ES2015",
    "module": "amd",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "~/*": ["src/*"]
    },
    "outDir": "lib",
    "baseUrl": ".",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "isolatedModules": false,
    "typeRoots": [ "./types", "./node_modules/@types"]
  },
  "include": [
    "./src/**/*"
  ]
}
